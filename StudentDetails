class Student {
    
    // Attributes
    private String studentID;
    private String name;
    private int age;
    private double gpa;
    // students details
    public Student(String studentID, String name, int age, double gpa) {
        this.studentID = studentID;
        this.name = name;
        this.age = age;
        this.gpa = gpa;
    }
    
    // Getter methods
    public String studentID() {
        return studentID;
    }
    
    public String studentName() {
        return name;
    }
    
    public int studentAge() {
        return age;
    }
    
    public double studentGpa() {
        return gpa;
    }
    
    // Sette methods
    public void gpa(double gpa) {
        this.gpa = gpa;
    }
    
    public void age(int age) {
        this.age = age;
    }
    
    // dipslay student details
    public void displayStudentDetails() {
        System.out.println("Student ID: " + studentID);
        System.out.println("Name: " + name);
        System.out.println("Age: " + age);
        System.out.println("Gpa: " + gpa);
        System.out.println("__________________________________");
    }
}

public class Main {
    public static void main (String[] args) {
        // Create two student objects
        Student student1 = new Student("S001", "Wilson", 21, 3.5);
        Student student2 = new Student("S002", "Ben", 20, 4.2);
        
        // Display details of both students
          System.out.println("Details of Student 1: ");
        student1.displayDetails();

        System.out.println("Details of Student 2: ");
        student2.displayDetails();

        // Update the GPA and age of student1
        student1.setGpa(3.9);
        student1.setAge(22);

        // Display the updated details of student1
        System.out.println("Updated details of Student 1:");
        student1.displayDetails();
    }
}
